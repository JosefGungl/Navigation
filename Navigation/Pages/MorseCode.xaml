<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation.Pages.MorseCode"
             Title="MorseCode">


    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label x:Name="YourText" Text="" HorizontalTextAlignment="Center" Padding="36" FontSize="Large"></Label>

            <Button Text="-" Clicked="DashClicked"/>
            <Button Text="." Clicked="DotClicked"/>
            <Button Text="space" Clicked="SpaceClicked"/>
            <Button Text="clear" Clicked="ClearClicked"/>


        </VerticalStackLayout>
    </ScrollView>


</ContentPage>