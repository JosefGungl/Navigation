<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:strings="clr-namespace:Navigation.Resources.Strings"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation.Pages.BMICalc"
             Title="BMICalc">


    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Entry x:Name="Weight" Placeholder="{x:Static strings:AppResources.WeightPlaceHolder}" Text="" HorizontalTextAlignment="Center" FontSize="Large" SemanticProperties.Description="{x:Static strings:AppResources.WeightPlaceHolder}" />
        <Entry x:Name="Height" Placeholder="{x:Static strings:AppResources.HeightPlaceHolder}" Text="" HorizontalTextAlignment="Center" FontSize="Large" SemanticProperties.Description="{x:Static strings:AppResources.HeightPlaceHolder}"/>
        <Button Text="{x:Static strings:AppResources.BMIButton}" Clicked="Calc" SemanticProperties.Description="{x:Static strings:AppResources.BMIButton}"/>
        <Label x:Name="BMItext" Text="" HorizontalTextAlignment="Center" FontSize="Large"/>

    </VerticalStackLayout>


</ContentPage>