<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:strings="clr-namespace:Navigation.Resources.Strings"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation.Pages.WhenCanIDrink"
             Title="WhenCanIDrink">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label x:Name="EnterBirthDate" Text="{x:Static strings:AppResources.BirthdayLabel}" FontSize="24"  Margin="30, 0, 0, 30" SemanticProperties.Description="{x:Static strings:AppResources.BirthdayLabel}"/>
            <DatePicker x:Name="BirthDate" Format="D" Margin="30, 10, 20, 30"   DateSelected="OnDateSelected"/>

            <Label x:Name="AgeText" Text="" Padding="30,10,30,10" FontSize="20" ></Label>

        </VerticalStackLayout>
    </ScrollView>



</ContentPage>