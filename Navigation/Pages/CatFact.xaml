<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation.Pages.CatFact"
             Title="CatFact">

    <VerticalStackLayout 
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label x:Name="factText" Text="Press the button to get a random cat fact!" HorizontalOptions="Center"/>
        <Button x:Name="btn" Text="Get a cat fact" Clicked="FactClicked" WidthRequest="200"/>


    </VerticalStackLayout>


</ContentPage>