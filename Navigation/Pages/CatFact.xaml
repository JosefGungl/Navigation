<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:strings="clr-namespace:Navigation.Resources.Strings"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation.Pages.CatFact"
             Title="CatFact">

    <VerticalStackLayout 
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label x:Name="factText" Text="{x:Static strings:AppResources.FactText}" HorizontalOptions="Center" SemanticProperties.Description="{x:Static strings:AppResources.FactText}"/>
        <Button x:Name="btn" Text="{x:Static strings:AppResources.FactBtn}" Clicked="FactClicked" WidthRequest="200" SemanticProperties.Description="{x:Static strings:AppResources.FactBtn}"/>


    </VerticalStackLayout>


</ContentPage>